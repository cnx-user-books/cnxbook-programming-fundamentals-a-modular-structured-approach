     <exercise id="idBooleanExpCh11">
        <problem id="idBooleanExpCh11p">
     <list id="BooleanexpqCh11" list-type="enumerated">
       <title> Evaluate the following Boolean expressions:</title>
       <item>25 &lt; 7</item>
                 <item>3 &lt; 7</item>
                 <item>14 &gt; 7</item>
                 <item>17 &lt;= 7</item>
                 <item>25 &gt;= 7</item>
                 <item>13 == 7</item>
                 <item>9 != 7</item>
                 <item>5 !&gt; 7</item>
      </list>
        </problem>
        <solution id="idBooleanExpCh11s">
     <list id="BooleanexpaCh11" list-type="enumerated"><title>Answers:</title><item>0</item>
	<item>1</item>
	<item>1</item>
	<item>0</item>
	<item>1</item>
	<item>0</item>
	<item>1</item>
	<item> Error, the “not greater than” is not a valid operator.</item>
</list>
        </solution>
      </exercise>
